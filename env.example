# Environment Variables for Hostel Management System
# Copy this file to .env and update the values

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_ENVIRONMENT=development

# Application Settings
REACT_APP_NAME=Hostel Management System
REACT_APP_VERSION=1.0.0

# Authentication Settings
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_TOKEN_EXPIRY=24h

# Database Configuration (for future backend integration)
REACT_APP_DB_HOST=localhost
REACT_APP_DB_PORT=5432
REACT_APP_DB_NAME=hostel_management
REACT_APP_DB_USER=your-db-user
REACT_APP_DB_PASSWORD=your-db-password

# Email Configuration (for future notifications)
REACT_APP_EMAIL_HOST=smtp.gmail.com
REACT_APP_EMAIL_PORT=587
REACT_APP_EMAIL_USER=your-email@gmail.com
REACT_APP_EMAIL_PASSWORD=your-app-password

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOAD=false
REACT_APP_ENABLE_REAL_TIME_CHAT=false
